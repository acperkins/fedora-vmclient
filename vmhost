case "$-" in
*i*)
	# Shell is interactive.
	export LIBVIRT_DEFAULT_URI="qemu:///system"
	echo '========================================================'
	echo '=== Launch a graphical display with `weston-launch`. ==='
	echo '===         Exit it with Ctrl+Alt+Backspace.         ==='
	echo '========================================================'
	;;
*)
	;;
esac
